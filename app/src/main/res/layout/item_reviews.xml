<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/iv_review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_account_circle"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="John Snow"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/iv_review_author"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/colorSecondaryLight"/>

    <TextView
        android:id="@+id/tv_review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/activity_horizontal_margin"
        android:ellipsize="start"
        android:maxLines="5"
        android:text="@string/large_text_2"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@id/tv_review_author"
        app:layout_constraintTop_toBottomOf="@id/tv_review_author" />


</android.support.constraint.ConstraintLayout>